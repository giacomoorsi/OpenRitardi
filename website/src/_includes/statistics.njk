{% include 'template/header.njk' %}
<!-- CONTENT -->
<div class="uk-container uk-container-large uk-margin-large">
    <h1>Statistics</h1>
    <p><b>Note: this project is still under development and data shown is from December 2022 to March 2023</b>.</p>
    <!-- Lorem ipsum -->
    <div uk-grid class="uk-grid-match uk-child-width-1-2@m">
        <!-- Worst trains -->
        <div>
            <div class="uk-card uk-card-default">
                <div class="uk-card-header">
                    <h3 class="uk-card-title uk-text-danger">Worst trains</h3>
                </div>
                <div class="uk-card-body">
                    <div class="uk-overflow-auto">
                        <table class="uk-table uk-table-divider uk-table-hover uk-table-small ot-ranking-table">
                            <thead>
                                <tr>
                                    <th width="35%">Train number</th>
                                    <th>Direction</th>
                                    <th uk-tooltip="This is the average delay of the train at each stop">
                                        Avg delay</th>
                                </tr>
                            </thead>
                            <tbody id="worst-trains">
                                <tr>
                                    <td colspan="3" style="text-align:center">
                                        <div uk-spinner></div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- End worst trains -->
        <!-- Best trains -->
        <div uk-grid class="uk-grid-match uk-child-width-1-2@m">
            <div>
                <div class="uk-card uk-card-default">
                    <div class="uk-card-header">
                        <h3 class="uk-card-title uk-text-success">Best trains</h3>
                    </div>
                    <div class="uk-card-body">
                        <div class="uk-overflow-auto">
                            <table class="uk-table uk-table-divider uk-table-hover uk-table-small ot-ranking-table">
                                <thead>
                                    <tr>
                                        <th width="35%">Train number</th>
                                        <th>Direction</th>
                                        <th uk-tooltip="This is the average delay of the train at each stop">
                                            Avg delay</th>
                                    </tr>
                                </thead>
                                <tbody id="best-trains">
                                    <tr>
                                        <td colspan="3" style="text-align:center">
                                            <div uk-spinner></div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End of section Best/Worst Trains -->
    <!-- Best/Worst Stations -->
    <div uk-grid class="uk-grid-match uk-child-width-1-2@m">
        <!-- Worst stations -->
        <div>
            <div class="uk-card uk-card-default">
                <div class="uk-card-header">
                    <h3 class="uk-card-title uk-text-danger">Worst stations</h3>
                </div>
                <div class="uk-card-body">
                    <div class="uk-overflow-auto">
                        <table class="uk-table uk-table-divider uk-table-hover uk-table-small ot-ranking-table">
                            <thead>
                                <tr>
                                    <th>Station</th>
                                    <th uk-tooltip="The average arrival delay of trains at each stop">Average delay
                                    </th>
                                    <th
                                        uk-tooltip="The number of trains that went through this stop during the 3-month period analyzed">
                                        Number of trains</th>
                                </tr>
                            </thead>
                            <tbody id="worst-stops">
                                <tr>
                                    <td colspan="3" style="text-align:center">
                                        <div uk-spinner></div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- End worst stations -->
        <!-- Best stations -->
        <div uk-grid class="uk-grid-match uk-child-width-1-2@m">
            <div>
                <div class="uk-card uk-card-default">
                    <div class="uk-card-header">
                        <h3 class="uk-card-title uk-text-success">Best stations</h3>
                    </div>
                    <div class="uk-card-body">
                        <div class="uk-overflow-auto">
                            <table class="uk-table uk-table-divider uk-table-hover uk-table-small ot-ranking-table">
                                <thead>
                                    <tr>
                                        <th>Station</th>
                                        <th uk-tooltip="The average arrival delay of trains at each stop">Average
                                            delay</th>
                                        <th
                                            uk-tooltip="The number of trains that went through this stop during the 3-month period analyzed">
                                            Number of trains</th>
                                    </tr>
                                </thead>
                                <tbody id="best-stops">
                                    <tr>
                                        <td colspan="3" style="text-align:center">
                                            <div uk-spinner></div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="uk-margin">
        <div class="uk-card uk-card-default uk-card-body uk-width-1-1">
            <div uk-grid class="uk-child-width-1-2">
                <div>
                    <h2>Regional differences</h2>
                    <p>
                        The map on the right shows that Italy faces strong regional differences in the average delay
                        of trains for <b>InterCity</b> trains. In particular, the quality of that service is very
                        low in the South of Italy. Regional trains show a good performance in the entire country,
                        while FrecciaRossa high-speed trains have a surprisingly bad performance in the entire
                        country.
                        <br><br>
                        You can use the dropdown below to select the train type you want to see on the map. By
                        hovering with the mouse on a region, you can see the average delay of trains in that region
                        and the number of trains registered in the 3-month period considered.
                    </p>

                    <div>
                        <h5>Train type</h5>
                        <div class="uk-margin-small">
                            <div class="uk-form-controls">
                                <select class="uk-select" id="form-horizontal-select-trainType"
                                    style="font-size: 110%; background: #f9f9f9">
                                    <option style="font-size: 120%;">All trains</option>
                                    <option style="font-size: 120%;">Regional</option>
                                    <option style="font-size: 120%;">EuroCity</option>
                                    <option style="font-size: 120%;" selected>InterCity</option>
                                    <option style="font-size: 120%;">FrecciaRossa</option>
                                    <option style="font-size: 120%;">FrecciaBianca</option>
                                    <option style="font-size: 120%;">FrecciaArgento</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="uk-inline">
                    <div id="regional-differences-map"></div>
                    <div class="map-overlay uk-position-bottom-right">
                        <div class="map-overlay-inner regional-legend">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/statistics.js" type="text/javascript"></script>
<script src="/libraries/maps/legend.js" type="text/javascript"></script>
<script src="/js/regional-differences.js" type="text/javascript"></script>